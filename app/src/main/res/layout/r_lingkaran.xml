<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LINGKARAN"
        android:textStyle="bold|italic"
        android:textColor="#0090ff"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/garis">
    </LinearLayout>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
        android:layout_marginTop="40dp"
    android:text="RUMUS ="
    android:textSize="20dp"
    android:textStyle="bold"
    android:textColor="#000" />

        <TextView
            android:id="@+id/rumusLG"
            android:text="phi((22/7)/3.14) x (jari-jari x jari-jari)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#0090ff"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="15dp"/>


    <EditText
        android:id="@+id/jarijariLG"
        android:inputType="number"
        android:hint="jari jari"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#000"/>


    <Button
        android:id="@+id/hitungLG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buton2"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="hitung"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HASIL LUAS :"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/hasilLG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#0090ff"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:textStyle="bold|italic"/>

</LinearLayout>