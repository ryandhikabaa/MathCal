<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRAPESIUM"
        android:textStyle="bold|italic"
        android:textColor="#0090ff"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/garis">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUMUS ="
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:id="@+id/rumusPP"
            android:text="Sisi berhadapan x tinggi / 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0090ff"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/sisi1TP"
        android:inputType="number"
        android:hint="Sisi hadap 1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="#000"/>

    <EditText
        android:id="@+id/sisi2TP"
        android:inputType="number"
        android:hint="Sisi hadap 2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000"/>

    <EditText
        android:id="@+id/tinggiTP"
        android:inputType="number"
        android:hint="Tinggi"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#000"/>


    <Button
        android:id="@+id/hitungTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buton2"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="hitung"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HASIL LUAS :"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#000" />

    <TextView
        android:id="@+id/hasilTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#0090ff"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:textStyle="bold|italic"/>

</LinearLayout>